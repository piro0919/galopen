{
  "name": "galopen",
  "version": "0.4.4",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "release": "pnpm release:create && pnpm release:upload",
    "release:create": "gh release create v$npm_package_version -t \"Release v$npm_package_version\" --generate-notes",
    "release:generate-latest": "node -e \"const fs=require('fs');const v=process.env.npm_package_version;const sig=fs.readFileSync('src-tauri/target/release/bundle/macos/Galopen.app.tar.gz.sig','utf8').trim();const json={version:v,notes:'',pub_date:new Date().toISOString(),platforms:{'darwin-aarch64':{signature:sig,url:'https://github.com/piro0919/galopen/releases/download/v'+v+'/Galopen.app.tar.gz'}}};fs.writeFileSync('latest.json',JSON.stringify(json,null,2))\"",
    "release:upload": "pnpm release:generate-latest && gh release upload v$npm_package_version \"src-tauri/target/release/bundle/dmg/Galopen_${npm_package_version}_aarch64.dmg\" \"src-tauri/target/release/bundle/macos/Galopen.app.tar.gz\" \"src-tauri/target/release/bundle/macos/Galopen.app.tar.gz.sig\" latest.json --clobber"
  },
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-autostart": "^2.5.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-notification": "^2.3.3",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-store": "^2.4.2",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "lucide-react": "^0.564.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0"
  }
}
